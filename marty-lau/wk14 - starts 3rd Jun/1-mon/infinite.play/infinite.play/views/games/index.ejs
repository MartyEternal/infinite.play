<%- include("../partials/header") %>

    <div class="index-feature-preview">
        <div id="feature-main" class="carousel-container">
            <% games.forEach(game=> { %>
                <a href="/games/<%= game._id %>"><img src="/images/store-basics/infplay-preview-default.png"></a>
                <% }) %>
        </div>
    </div>

    <div class="carousel">
        <button class="carousel__button carousel__button--left is-hidden">
            <img src="/images/store-basics/arrow-left.png" alt="">
        </button>
        <div class="carousel__track-container">
            <ul class="carousel__track">
                <li class="carousel__slide current-slide"><img class="carousel__image"
                        src="images/game-previews/borderlands-3-001.jpg" alt=""></li>
                <li class="carousel__slide"><img class="carousel__image"
                        src="images/game-previews/borderlands-3-002.jpg" alt=""></li>
                <li class="carousel__slide"><img class="carousel__image"
                        src="images/game-previews/borderlands-3-003.jpg" alt=""></li>
            </ul>
        </div>
        <button class="carousel__button carousel__button--right"><img src="/images/store-basics/arrow-right.png"
                alt=""></button>

        <div class="carousel__nav">
            <button class="carousel__indicator current-slide"></button>
            <button class="carousel__indicator"></button>
            <button class="carousel__indicator"></button>
        </div>
    </div>

    <script src="/javascripts/carousel.js"></script>

    <%- include("../partials/footer") %>