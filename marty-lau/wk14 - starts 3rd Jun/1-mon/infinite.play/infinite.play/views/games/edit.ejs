<%- include("../partials/header") %>

    <main class="upload-game">
        <section class="upload-form">
            <h2>Editing Your Game</h2>
            <div class="terms">
                <p>Reminder of terms or things that user has to agree to upload (rules)</p>
            </div>
            <form action="/games/<%= game._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" value="<%= game.title %>" required>
                </div>
                <div class="form-group">
                    <label for="genre">Genre:</label>
                    <select id="genre" name="genre" value="<%= game.genre %>" required>
                        <option value="">Select a genre</option>
                        <!-- genre options here -->
                        <option value="Action">Action</option>
                        <option value="Adventure">Adventure</option>
                        <option value="Casual">Casual</option>
                        <option value="Fighting">Fighting</option>
                        <option value="Puzzle">Puzzle</option>
                        <option value="Role Playing">Role Playing</option>
                        <option value="Shooter">Shooter</option>
                        <option value="Sports">Sports</option>
                        <option value="Strategy">Strategy</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="price">Price:</label>
                    <select id="currency" name="currency" value="<%= game.currency %>" required>
                        <option value="">Select a currency</option>
                        <!-- currency options here -->
                        <option value="USD">USD</option>
                        <option value="EUR">EUR</option>
                        <option value="GBP">GBP</option>
                        <option value="AUS">AUS</option>
                        <option value="NZD">NZD</option>
                        <option value="JPY">JPY</option>
                    </select>
                    <input type="number" id="price" name="price" step="0.01" value="<%= game.price %>" required>
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea id="description" name="description" rows="5" value="<%= game.description %>" required></textarea>
                </div>
                <div class="form-group">
                    <label for="upload">Upload Files:</label>
                    <input type="text" id="image" name="image" value="">
                    <input type="file" id="upload" name="upload" placeholder="Upload files">
                </div>
                <button class="new-submit" type="submit">Submit</button>
            </form>
        </section>
        <aside class="helpful-resources">
            <h3>Helpful Resources for Users Adding New Games to the Website</h3>
            <!-- helpful resources content here -->
            <ul>
                <li><a href="#">Introduction to Game Uploading</a></li>
                <li><a href="#">Infinite SDK</a></li>
                <li><a href="#">Server Leasing/API</a></li>
                <li><a href="#">Guidelines to In-Game Marketing and Microtransactions</a></li>
                <li><a href="#">Developer's Realm</a></li>
            </ul>
        </aside>
    </main>

    <%- include("../partials/footer") %>