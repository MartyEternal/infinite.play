<%- include("../partials/header") %>

    <h2>Flight List</h2>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight â„–</th>
                <th>Departure Date</th>
            </tr>
        </thead>
        <tbody>
            <!-- Write the line of EJS to iterate over movies using forEach -->
            <% flights.forEach(function(m) { %>
                <tr>
                    <td>
                        <%= m.airline %>
                    </td>
                    <td>
                        <%= m.airport %>
                    </td>
                    <td>
                        <%= m.flightNo %>
                    </td>
                    <td>
                        <%= m.departs %>
                    </td>
                    <td><a href="/flights/<%= m._id %>">Details</a></td>
                </tr>
                <!-- Close the forEach using EJS here -->
                <% }); %>
        </tbody>
    </table>

    <%- include("../partials/footer") %>