<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Skills list</title>
    <link rel="stylesheet" href="/stylesheets/skills-style.css" />
  </head>
  <body>
    <div class="container">
      <h1>Dylan's list of skills</h1>
      <ul class="list-group">
        <% skills.forEach(function(t) { %>
        <div class="list-group-item">
          <form
            action="/skills/<%= t.id %>?_method=DELETE"
            class="delete-form"
            method="POST"
          >
            <button type="submit">X</button>
          </form>
          <a href="/skills/<%= t.id %>"><%= t.skill %></a> - <%= t.done ?
          'Skillful' : 'Unskillful' %>
        </div>
        <% }); %>
      </ul>
      <p><a href="/skills/new">Add new skill</a></p>
      <p><a href="/">Return Home</a></p>
    </div>
  </body>
</html>
